{
  "version": 2,
  "name": "siigo-<%= config.name %> Krakend api gateway",
  "port": "<%= config.port %>",
  "timeout": "60000ms",
  "endpoints": [
    {
      "endpoint": "/health",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "static": {
            "data": {
              "status": "OK - siigo-<%= config.name %>"
            },
            "strategy": "always"
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/__health",
          "host": ["http://localhost:<%= config.port %>"]
        }
      ]
    }
  ],
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": ["http*"],
      "max_age": "12h",
      "allow_headers": ["*"],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "CONNECT",
        "OPTIONS",
        "TRACE",
        "PATCH"
      ]
    }
  }
}
